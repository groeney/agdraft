<% content_for :dashboard_header do %>
  <%= render partial: "includes/dashboard/masthead", locals: {header: "Cover Photo", icon: "edit", description: "Upload the cover photo for your farm", live_link: false } %>
<%end%>

<%= form_tag(farmer_cover_photo_path, method: :put, multipart: true, id: "cover_photo_form", class: "ui form segment") do %>
  <p>
    <p>
      <label>Cover Photo: </label>
    </p>
    <label for="fileInput" class="ui icon button">
      <i class="file icon"></i>
      Attach File
    </label>
    <input type="file" id="fileInput" name="farmer[cover_photo]" style="display:none" data-min-width="1400" data-min-height="300" data-wide-aspect="true" required>
    <div id="image-holder"></div>
  </p>
  <div class="ui error message"></div>
  <%= link_to "Cancel", farmer_cover_photo_path, class: "ui button primary basic" %>
  <input type="submit" class="ui primary submit button" value="Save"/>
<%end%>