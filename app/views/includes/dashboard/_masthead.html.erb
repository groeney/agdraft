<div class="page header">
  <%= render partial: "includes/dashboard/menu" %>
</div>

<% if defined? header %>
  <h1 class="ui header">
    <i class="<%= icon %> icon"></i>
    <div class="content">
      <%= header %>
      <div class="sub header"><%= description.html_safe %></div>
    </div>
  </h1>
  <% if live_link %>
    <% profile_path = current_farmer ? farmer_path(current_farmer) : worker_path(current_worker) %>
    <%= link_to "View Your Profile", profile_path, class: "ui primary button", target: "_blank" %>
  <% end %>
<% end %>