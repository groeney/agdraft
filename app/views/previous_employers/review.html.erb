<h2>Thanks for taking the time to review <%= @worker.full_name %></h2>

<%= form_tag previous_employer_review_path(@previous_employer.id), method: "POST" do %>
  <p>
    <label>Rating (out of 5)</label><br/>
    <select name="rating">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
  </p>
  <p>
    <label>Review</label><br/>
    <textarea name="review" style="width:100%;height:100px;"></textarea>
  </p>
  <%= submit_tag "Submit" %>
<%end%>