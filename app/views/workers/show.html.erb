<div style="text-align:center;height:300px;">
  <div class="hero-image-container very-padded" style="background-image:url('<%= asset_path Farmer.first.cover_photo.url(:display) %>')!important;filter:brightness(60%);">
  </div>
  <div class="ui basic segment" style="bottom:275px;">
    <div class="ui circular image" style="width:100px;">
      <%= image_tag @worker.profile_photo.url(:display) %>
    </div>
    <h3 style="color:white;margin-top:0.25em;font-weight:lighter;"><%= @worker.full_name %></h3>
    <div class="ui huge star rating" data-rating="<%= rand(2..5) %>" data-max-rating="5"></div>
    <span style="display:inline;color:white;opacity:0.7;">(<%= rand(1..10) %>)</span>

    <% if @worker.verified %>
      <div style="color:orange;">
        <i class="checkmark box icon"></i>
        <span>Verified</span>
      </div>
    <% end %>

    <% if current_farmer %>
      <div class="ui teal button invite-worker" style="margin-top:10px;" data-worker-id="<%= @worker.id %>">
        Invite me to apply
      </div>
    <% end %>
  </div>
</div>

<div class="ui basic segment" style="text-align: center;">
  <div class="ui centered stackable two column grid">
    <div class="ui six wide column" style="text-align:left;">
      <% if @worker.description.present? %>
        <div class="ui basic segment">
          <h3 class="header">
            Description
          </h3>
          <p>
            <%= @worker.description %>
          </p>
        </div>
      <% end %>

      <% if @worker.skills.present? %>
        <div class="ui basic segment">
          <h3 class="header">
            Skills
          </h3>
          <div class="ui horizontal list">
            <% @worker.skills.each do |skill| %>
              <div class="ui label item">
                <%= skill.title %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <% if @worker.certificates.present? %>
        <div class="ui basic segment">
          <h3 class="header">
            Certificates
          </h3>
          <div class="ui horizontal list">
            <% @worker.certificates.each do |certificate| %>
              <div class="ui label item">
                <%= certificate.title %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <% if @worker.locations.present? %>
        <div class="ui basic segment">
          <h3 class="header">
            Willing to Work
          </h3>
          <div class="ui horizontal list">
            <% @worker.locations.each do |location| %>
              <div class="ui basic label item" style="padding:3px;border:0px;">
                <i class="teal marker icon"></i>
                <%= location.label %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <% if @worker.nationality.present? %>
        <div class="ui basic segment">
          <h3 class="header" style="display:inline-block;">
            Nationality:
          </h3>
          <span><%= @worker.nationality %></span>
          <% unless @worker.nationality.include? "Australia" %>
            <% visa_present = @worker.visa.present? %>
            <br>
            <i class="teal thumbs outline <%= visa_present ? "up" : "down" %> icon"></i>
            <span>Visa: <%= visa_present ? "Yes" : "No" %> </span>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="ui six wide column" style="text-align:left;">
      <div class="ui basic segment">
        <% if @worker.reviews_of.present? %>
          <h3 class="header">Reviews</h3>
          <% @worker.reviews_of.each do |review| %>
            <%= render partial: "includes/review_card", locals: { review: review } %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <% if current_farmer %>
    <button class="ui teal button invite-worker">Invite me to apply</button>
  <% end %>
</div>

<%= render "jobs_modal" if current_farmer %>