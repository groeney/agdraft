<h2><%= image_tag "header-logo.png", class: "ui image desktop-only" %>Worker Login</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="ui left aligned segment">
    <%= render "includes/flash_notices" -%>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true, label: false, placeholder: "Email Address" %>
      <%= f.input :password, required: false, label: false, placeholder: "Password" %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= button_tag "Log in", class: "ui fluid large primary button" %>
    </div>
  </div>
<% end %>
<div class="ui segment">
  <%= render "farmers/shared/links" %>
</div>