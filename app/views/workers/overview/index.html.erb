<% content_for :dashboard_header do %>
<%end%>

<div class="ui stackable two columns grid">
  <div class="ui column">
    <h3>Profile</h3>
    <p>Complete your profile so employers know more about you</p>
    <div class="ui progress yellow" data-percent="33" id="progress">
      <div class="bar">
        <div class="progress"></div>
      </div>
      <div class="label">Only 33% complete. Keep going!</div>
    </div>
  </div>
  <div class="ui column">
    <h3>Jobs</h3>
    <p>You current have <b>0 job offers</b> and <b>0 job applications</b>. Search for work below and apply for a job!</p>
  </div>
</div>
<div class="ui hidden divider"></div>
<h2>Opportunities for People like you</h2>
<div class="ui primary icon button">
  <i class="search icon"></i>
  Find other jobs
</div>
<div class="ui hidden divider"></div>
<div class="ui cards">
  <% @recommended_jobs.each do |job| %>
    <%= render partial: "search/job_card", locals: { job: job } %>
  <% end %>
</div>

<% content_for :javascripts do %>
  <script>
    $(function(){
      $('#progress').progress();
    })
  </script>
<%end%>