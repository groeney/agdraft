<div class="ui modal">
  <i class="close icon"></i>
  <div class="header">
    Choose the job you wish to invite this worker to
  </div>
  <div class="ui four column centered stackable grid segment basic">
    <%if @jobs.empty? %>
      <h2 class="sixteen wide column">You haven't published any jobs yet</h2>
      <a class="ui teal button four wide column" href="<%= new_farmer_job_path %>">
        Post Job
      </a>
    <%else%>
      <% @jobs.each do |j| %>
        <div class="ui aligned center column">
          <h3><%= j[:job].title %></h3>
          <button class="ui primary button <%= 'disabled' if j[:invited] %> js-invite-worker" data-job-id="<%= j[:job].id %>"><%= j[:invited] ? 'Invited' : 'Invite' %></button>
        </div>
      <%end%>
    <%end%>
  </div>
  <div class="actions">
    <div class="ui positive right labeled icon button">
      Finished
      <i class="checkmark icon"></i>
    </div>
  </div>
</div>