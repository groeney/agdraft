<%= stylesheet_link_tag "registrations" %>
<div class="hero-image-container" id="worker-signup-hero">
  <div class="ui stackable two column grid">

    <div class="ui column">
      <div class="ui very padded segment basic">
        <div class="signup-content-block">
          <h1 class="ui center aligned inverted header">Connect with farming jobs today</h1>
          <h4 class="ui center aligned inverted header">Setup your free worker profile today! You will be able to find paid work in a wide range of agricultural settings. Once you have listed your profile you will be able to apply to jobs.</h4>
        </div>
      </div>
    </div>

    <div class="ui column very padded segment basic">
      <div class="ui very padded segment basic">
        <div class="ui basic segment">
          <h3 class="ui center aligned header" style="color:white;">Sign Up as a Worker</h3>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
            <div class="form-inputs">
              <div class="ui stackable grid">
                <div class="ui eight wide column">
                  <%= f.input :first_name, required: true, autofocus: true %>
                </div>
                <div class="ui eight wide column">
                  <%= f.input :last_name, required: true, autofocus: true %>
                </div>
                <div class="ui eight wide column">
                  <%= f.input :email, required: true, autofocus: true %>
                </div>
                <div class="ui eight wide column">
                  <%= f.input :mobile_number, required: true, autofocus: true %>
                </div>
                <div class="ui eight wide column">
                  <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                </div>
                <div class="ui eight wide column">
                  <%= f.input :referred_by_token, autofocus: true %>
                </div>
              </div>
            </div>
            <div class="ui divider hidden"></div>
            <div class="form-actions">
              <%= f.button :submit, "Sign up" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

