<div class="hero-image-container" id="worker-signup-hero">
  <div class="ui stackable two column grid">
    
    <div class="ui column">
      <div class="ui very padded segment basic">
        <div class="signup-content-block">
          <h1 class="ui center aligned inverted header">Connect with farming jobs today</h1>
          <h4 class="ui center aligned inverted header">Setup your free worker profile today! You will be able to find paid work in a wide range of agricultural settings. Once you have listed your profile, you will be able to apply to jobs and farmers will be able to see you and invite to jobs they post as well.</h4>
        </div>
      </div>
    </div>

    <div class="ui column very padded segment basic">
      <div class="ui very padded segment basic">
        <div class="ui segment"> 
          <h3 class="ui center aligned header">Sign Up as a Worker</h3>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
            <div class="form-inputs">
              <div class="ui stackable grid">
                <div class="ui eight wide column">
                  <%= f.input :first_name, required: true, autofocus: true %>
                </div>
                <div class="ui eight wide column">
                  <%= f.input :last_name, required: true, autofocus: true %>
                </div>
                <div class="ui eight wide column">
                  <%= f.input :email, required: true, autofocus: true %>
                </div>
                <div class="ui eight wide column">
                  <%= f.input :mobile_number, required: true, autofocus: true %>
                </div>
                <div class="ui eight wide column">
                  <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                </div>
                <div class="ui eight wide column">
                  <%= f.input :referred_by_token, autofocus: true %>
                </div>
              </div>
            </div>
            <div class="ui divider hidden"></div>
            <div class="form-actions">
              <%= f.button :submit, "Sign up" %>
            </div>
            <%= render "workers/shared/links" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="ui stackable two column grid">
  <div class="ui teal column">
    <div class="ui very padded segment basic">
      <i class="ui add user icon huge"></i>
      <h3>Build your workers profile today</h3>
      <p>Create an online profile showing off all your skills and experience to help you land the best farming jobs - for free.</p>
    </div>
  </div>
  <div class="ui teal column">
    <div class="ui very padded segment basic">
      <i class="ui announcement icon huge"></i>
      <h3>Get alerted to jobs</h3>
      <p>Be the first to apply for jobs that match your skills and location when they are sent directly to your inbox â€“ for free</p>
    </div>
  </div>
  <div class="ui teal column">
    <div class="ui very padded segment basic">
      <i class="ui dollar icon huge"></i>
      <h3>Set your pay rate</h3>
      <p>Apply with your price on jobs that you choose and negiogate directly with farmers.</p>
    </div>
  </div>
  <div class="ui teal column">
    <div class="ui very padded segment basic">
      <i class="ui compass icon huge"></i>
      <h3>Search the best farming jobs</h3>
      <p>Our farmers are reviewed by other workers to ensure a good working experience.</p>
    </div>
  </div>
</div>
<div class="ui very padded segment basic">
  <h1>Jobs listed that required these skills</h1>
  <div class="ui label-list">
    <% Skill.all.each do |skill| %>
      <div class="ui huge label"><%= skill.title %></div>
    <%end%>
  </div>
</div>
<div class="ui very padded brown inverted segment basic no-margin">
  <div class="ui stackable column grid">
    <div class="ui ten wide column">
      <h2>Stay up-to-date on our blog</h2>
      <h4>Get tips on how you can land more farming jobs.</h4>
    </div>
    <div class="ui six wide column">
      <%= link_to "Read Now", "http://blog.agdraft.com.au", class: "ui teal massive button" %>
    </div>
  </div>
</div>