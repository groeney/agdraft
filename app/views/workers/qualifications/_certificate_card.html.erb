<div class="ui card" data-certificate-id="<%= certificate.id %>" data-resource-type="certificate">
  <div class="content">
    <div class="header"><%= certificate.title %></div>
    <div class="meta">
      <span>
        <%= certificate.issue_date.strftime("%B %Y") %>
      </span>
      <br>
      <span>
        <%= certificate.issuing_institution %>
      </span>
    </div>
    <div class="description">
      <%= certificate.description %>
    </div>
  </div>
  <div id="delete" class="ui bottom attached red button" data-certificate-id="<%= certificate.id %>">
    <i class="trash can icon"></i>
    Delete
  </div>
</div>