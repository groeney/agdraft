<% content_for :dashboard_header do %>
  <%= render partial: "includes/dashboard/masthead", locals: {header: "Profile Photo", icon: "edit", description: "Upload your headshot for your profile", live_link: false } %>
<%end%>

<%= form_tag(worker_profile_photo_path, method: :put, multipart: true, id: "profile_photo_form", class: "ui form segment") do %>
  <p>
    <p><label>Profile Photo: </label></p>
    <label for="fileInput" class="ui icon button">
        <i class="file icon"></i>
        Attach File</label>
    <input type="file" id="fileInput" name="worker[profile_photo]" style="display:none" data-min-width="100" data-min-height="100" required>
    <div id="image-holder"> </div>
  </p>
  <div class="ui error message"></div>
  <%= link_to "Cancel", worker_profile_photo_path, class: "ui button brown basic" %>
  <input type="submit" class="ui brown submit button" value="Save"/>
<%end%>