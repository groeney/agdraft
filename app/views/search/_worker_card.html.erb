<a class="ui card" href="<%= worker_path(worker.id) %>">
  <div class="content">
    <div class="header"><%= worker.full_name %></div>
    <div class="ui image">
      <%= image_tag worker.profile_photo.url(:display) %>
    </div>
    <div class="meta">
      <span><%= worker.nationality %></span>
    </div>
  </div>

  <div class="meta content">
    <h2 class="ui sub header">Skills:</h2>
    <div class="ui horizontal list">
      <div class="label-list">
        <% worker.skills.each do |skill| %>
          <div class="ui label">
            <%= skill.title %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="ui hidden divider"></div>

    <h2 class="ui sub header">Job Categories:</h2>
    <div class="ui horizontal list">
      <div class="label-list"> 
        <% worker.job_categories.each do |job_category| %>
          <div class="ui label">
            <%= job_category.title %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="extra content">
    Rating:
    <div class="ui star rating" data-rating="<%= rand(1..5) %>"></div>
    <div class="meta">Joined <%= worker.created_at.strftime("%B %Y") %></div>
  </div>
</a>