/*************** FROM SEMANTIC HOMEPAGE EXAMPLE ******************/
.hidden.menu {
  display: none;
}

.masthead.inverted.segment {
  min-height: 700px;
  padding: 1em 0em;
  background-image: linear-gradient(
      rgba(0, 0, 0, 0.1),
      rgba(0, 0, 0, 0.1)
    ),
    url("<%= asset_path 'homepage-hero.png' %>")!important;
  background-size: cover;
  background-position: center;
  background-position-x: center;
}
.masthead .logo.item img {
  margin-right: 1em;
}
.masthead .ui.menu .ui.button {
  margin-left: 0.5em;
}
.masthead h1.ui.header {
  margin-top: 3em;
  margin-bottom: 0em;
  font-size: 4em;
  font-weight: normal;
}
.masthead h2 {
  font-size: 1.7em;
  font-weight: normal;
}

.ui.vertical.stripe {
  padding: 8em 0em;
}
.ui.vertical.stripe h3 {
  font-size: 2em;
}
.ui.vertical.stripe .button + h3,
.ui.vertical.stripe p + h3 {
  margin-top: 3em;
}
.ui.vertical.stripe .floated.image {
  clear: both;
}
.ui.vertical.stripe p {
  font-size: 1.33em;
}
.ui.vertical.stripe .horizontal.divider {
  margin: 3em 0em;
}

.quote.stripe.segment {
  padding: 0em;
}
.quote.stripe.segment .grid .column {
  padding-top: 5em;
  padding-bottom: 5em;
}

.footer.segment {
  padding: 5em 0em;
}

.secondary.pointing.menu .toc.item {
  display: none;
}

@media only screen and (max-width: 700px) {
  .ui.top.menu {
    display: none !important;
  }
  .secondary.pointing.menu .item,
  .secondary.pointing.menu .menu {
    display: none;
  }
  .secondary.pointing.menu .toc.item {
    display: block;
  }
  .masthead.segment {
    min-height: 350px;
  }
  .masthead h1.ui.header {
    font-size: 2em;
    margin-top: 2.5em;
  }
  .masthead h2 {
    margin-top: 50px;
    margin-bottom: 30px;
    font-size: 1.5em;
  }
}

/************** HOMEPAGE STYLES ******************/
.secondary.inverted.menu{
  .sidebar{
    color:white!important;
    opacity:1!important;
  }

  a.logo{
    padding-top:15px;
  }

  img.header.item{
    width: 175px;
    padding: 0;
    margin-right: 50px;
  }
}

.pages.home{
  #mobile-menu{
    display:none!important;
  }
}

#mobile-menu{
  display:none;
}

@media only screen and (max-width: 700px) {
  #mobile-menu{
    display:block;
    background-color: grey;
    margin: 0!important;
    padding: 7px 0;
    border: none;
    .secondary.menu{
      border:none;
    }
    .ui.button{
      margin-left: 0.5em;
    }
  }
}

/************* NAVIGATION MENU ****************/
.top.menu{
  margin-bottom:0px;
  img.header.item{
    width: 175px;
    height: 50px;
    border-left: none;
  }
}

/*************** HERO IMAGES ******************/
.hero-image-container{
  width:100%;
  background-size: cover;
  background-position: center;
  background-position-x: center;

  &#farmer-signup-hero{
    background-image: linear-gradient(
      rgba(0, 0, 0, 0.5),
      rgba(0, 0, 0, 0.5)
    ),
    url("<%= asset_path 'alternate-hero.jpg' %>")!important;
  }
  &#get-started-hero{
    background-image: linear-gradient(
      rgba(0, 0, 0, 0.5),
      rgba(0, 0, 0, 0.5)
    ),
    url("<%= asset_path 'alternate-hero.jpg' %>")!important;
  }
  &#worker-signup-hero{
    background-image: linear-gradient(
      rgba(0, 0, 0, 0.5),
      rgba(0, 0, 0, 0.5)
    ),
    url("<%= asset_path 'alternate-hero.jpg' %>")!important;
  }
  &#login-hero{
    background-image: linear-gradient(
      rgba(0, 0, 0, 0.5),
      rgba(0, 0, 0, 0.5)
    ),
    url("<%= asset_path 'alternate-hero.jpg' %>")!important;
  }

  &.very-padded{
    padding:150px;

    h1{
      margin-bottom:80px;
      font-size:3em!important;
    }
  }
}

/**************** SIGNUP STYLES ****************/
#new_farmer, #new_worker{
  .column{
    padding-bottom:0!important;
  }
}

.signup-content-block{
  margin-top: 24%;

  h1.ui.header{
    font-size:2.5em!important;
  }
}

/*************** LOGIN STYLES *****************/

body.sessions.new, body.passwords.new, body.passwords.edit {
  background-color: #DADADA;

  .image {
    margin-top: -100px;
  }
  .column {
    max-width: 450px;
  }
}
body.sessions.new, body.passwords.new, body.passwords.edit > .grid {
  height: 100%;
}

/************ PROFILE PAGE STYLES **************/
.profile-tabs{
  margin-top: -1px;
  .active.item{
    background-color:$primary-color !important;
    .description{
      color: white;
    }
    .icon{
      color:white;
    }
  }

  .item{
    cursor: pointer;
    padding-bottom:20px !important;
    border-bottom: 0.1rem solid #e8e8e8 !important;
    border-left: 0.1rem solid #e8e8e8 !important;
    border-right: 0.1rem solid #e8e8e8 !important;
    .description{
      font-size:1rem !important;
    }
  }
}

#fixed-menu-logo{ 
  width: 250px;
  padding:0px;
}

/***************** SOCIAL BUTTONS ******************/
iframe.twitter-share-button{
  height:25px!important;
}
.fb-share-button{
  a.ui.button{
    position:relative;
    height:30px;

    #facebook-share{
      position:absolute;
      left:14px;
      top:5px;
      height:40px;
    }
  }
}